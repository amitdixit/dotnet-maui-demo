<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiApp1.FlyoutDemoPage"
             Title="FlyoutDemoPage" FlyoutLayoutBehavior="Popover">


    <FlyoutPage.Flyout>
        <ContentPage Title="My Flyout">
            <Label Text="Flyout Demo" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage>
            <Label Text="Flyout Detail" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" />
        </ContentPage>
    </FlyoutPage.Detail>

</FlyoutPage>